@model Sprint_Zero.Models.ContactDetail

@{
    ViewBag.Title = "This page is the contact page";
    ViewBag.ContactTitle = "This page is about the contact details and contact form";
    ViewBag.Contactheading = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <h1>Please fill the form</h1>
    <h2>@ViewBag.ContactTitle</h2>
    <h3>@ViewBag.Message</h3>
</head>
<body class="contactImg">

    <img src="http://s3.amazonaws.com/digitaltrends-uploads-prod/2016/10/aol-discs-cd.jpg" align="right" height="500" width="400">

    @using (Html.BeginForm("Create", "ContactDetails"))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form name="myForm">
            <div class="form-group">
                <label>First Name:</label>
                @*@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })*@
                <input id='FirstName' class="form-control" type='text' value="" name="FirstName" placeholder='FirstName' required>
            </div>

            <div class="form-group">
                <label>Last Name:</label>
                <input id='LastName' class="form-control" type='text' value="" name="LastName" placeholder='LastName' required>
            </div>
            <div class="form-group">
                <label>State:</label>
                <input id='State' class="form-control" type='text' value="" name="State" placeholder='State' required>
            </div>
            <div class="form-group">
                <label>Phone:</label>
                <input id='PhoneNumber' class="form-control" type=text value="" name="PhoneNumber" placeholder='Phone' onblur='return validatePhone();' required>
                <div id="validePhoneNumber" class="hidden">Please enter a valide Phone Number</div>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type='text' class="form-control" value="" name="EmailAddress" id="invalidEmail" onblur='return validateForm();' placeholder='your email' required>
                <div id="valideEmail" class="hidden">Please enter a valide Email</div>
            </div>

            <div class="form-group" id="pass1">
                <label>Password:</label>
                <input type='password' value="" class="form-control" name="Password" id="Password" onblur='return passwordValidation();' title="Must contain at least one number and one uppercase and one lowercase letter and one special character, and at least 8 or more characters" required>
                <div id="passwordNull" class="hidden">Please enter a valide password</div>
                <div id="passwordError" class="hidden">Password did not meet the requirements</div>
            </div>

            <div class="form-group" id="pass2">
                <label>Password2:</label>
                <input type='password' value="" class="form-control" name="Password2" id="Password2" onblur=' return validatePassword();' />
                <div id="passwordMisMatach" class="hidden">Re-Entered Password did not match</div>
                <span id='message'></span>
            </div>

            <div class="form-group">
                <label for="gameSystem">Please select Video game system:</label>
                <select class="form-control" id="gameSystem" onchange="displayVideoGameOptions()" name="GameSystem">
                    <option value=""> </option>
                    <option value="PS4">PS4</option>
                    <option value="XBoxOne">XBox One</option>
                </select>
            </div>
            <div class="form-group hidden" id="noGame">
                <label for="emptyGame">Please select Video game</label>
                <select class="form-control" id="emptyGame">
                    <option value=""> </option>
                </select>
            </div>
            <div class="form-group hidden" id="ps4Game">
                <label for="PS4">Please select Video game</label>
                <select class="form-control" id="PS4" name="Game">
                    <option value="Gods Of War">Gods Of War</option>
                    <option value="Crash Bandicoot">Crash Bandicoot</option>
                </select>
            </div>
            <div class="form-group hidden" id="xbox">
                <label for="XBox">Please select Video game</label>
                <select class="form-control" id="XBox" name="Game">
                    <option value="Halo">Halo</option>
                    <option value='Gears of War'>Gears of War</option>
                </select>
            </div>

            <div class="checkbox">
                <label><input name="check" type="checkbox" onchange="hideAgeColumn()" id="isAgeSelected" > Is age 18 or over</label>
            </div>

            <div class="form-group" id="hideAge">
                <label>Age:</label>
                <input class="form-control" id='age' onblur="verifyAge(event)" type='text' name="AgeCheck"/>
                <span id="below18Error" class="hidden">Age must be below 18 years</span>
                <span id="valideNumber18Error" class="hidden">Age must be a number</span>
            </div>

            <div>
                <p> I agree to the terms and conditions:</p>

                <div class="radio" for="Term">
                    <label><input type="radio" name="Term" value='yes'>Yes</label>
                </div>
                <div class="radio" for="Term">
                    <label><input type="radio" name="Term" value='no'>No</label>
                </div>
            </div>
            <div class="form-group">
                <input type='submit' class="form-control submitButton" onclick="" value="submit">
            </div>
        </form>
    }
</body>





