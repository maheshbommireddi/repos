@model Sprint_Zero.Models.Movies

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Movies</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Movie)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Movie)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Poster)
        </dt>




        <dd>
            @if (Model.Poster != null)
            {

                var base64 = Convert.ToBase64String(Model.Poster);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);

                <img src='@imgSrc' style="max-width:100px; max-height:100px;" />
            }
        </dd>



    </dl>
</div>



<body class="aboutImage aboutContent">
    <h3>Below is the Trailer of  @Html.DisplayFor(model => model.Movie)  </h3>
    <iframe width="560"
            height="315"
            src="@Html.DisplayFor(model => model.url)"
            frameborder="1"
            allowfullscreen></iframe>
</body>







<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Add to Cart", "AddToCart", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
